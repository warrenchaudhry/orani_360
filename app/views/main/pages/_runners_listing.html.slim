- if runners.any?
  table.table.table-bordered.table-listing
    thead
      tr
        th BIB No
        th FULL NAME
        th GENDER
        th GROUP / ORG. / COMPANY
    tbody
      - runners.each do |r|
        tr
          td = r.registration_no
          td = r.display_name
          td = prettify_value(r, 'gender')
          td = prettify_value(r, 'grp_org_comp')
- else
  p.lead No participants for this category