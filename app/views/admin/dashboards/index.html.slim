.row
  /! 3K panel
  .col-lg-3.col-md-6
    .panel.panel-yellow
      .panel-heading
        .row
          .col-xs-3
            .huge 3K
          .col-xs-9.text-right
            .huge = @registrations.approved.fetch_by_category('3K').size
