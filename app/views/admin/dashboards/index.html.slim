.row
  .col-lg-12
    table#reg-info-table.table.table-bordered
      thead
        tr
          th Category
          th Pending
          th Rejected
          th Approved
          th Free
          th Total
      tbody
        - %w(3K 5K 10K 21K).each do |reg|
          tr
            td = reg
            td = @registrations.pending.fetch_by_category(reg).size
            td = @registrations.rejected.fetch_by_category(reg).size
            td = @registrations.approved.fetch_by_category(reg).size
            td = @registrations.free.fetch_by_category(reg).size
            td = number_to_currency @registrations.approved.fetch_by_category(reg).total, unit: 'P'
        tr.total-row
          td
          td = @registrations.pending.size
          td = @registrations.rejected.size
          td = @registrations.approved.size
          td = @registrations.free.size
          td = number_to_currency @registrations.approved.total, unit: 'P'
